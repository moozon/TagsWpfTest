<Window x:Name="newTagWindow" x:Class="TagsWpfTest.NewTagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TagsWpfTest"
        mc:Ignorable="d"
        Title="Создание нового тэга" Height="200" Width="300">
    <Grid>
        <Label Content="Введите имя и тип нового тега" Height="37" Width="258" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Margin="26,0,8,0"/>
        <TextBox x:Name="nameTextBox" Margin="70,42,42,101" FontSize="14"/>
        <TextBox x:Name="typeTextBox" Margin="70,82,42,61" FontSize="14"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="26,42,0,0" VerticalAlignment="Top"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="33,82,0,0" VerticalAlignment="Top"/>
        <Button x:Name="okButton" Content="OK" HorizontalAlignment="Left" Margin="46,139,0,0" VerticalAlignment="Top" Width="75" Click="okButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="175,139,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
    </Grid>
</Window>
